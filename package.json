{
  "name": "simple-towns-bot-starter",
  "version": "1.0.0",
  "description": "Secret Word Hunt Bot - Towns Protocol",
  "type": "module",
  "main": "dist/index.mjs",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsc --noEmit && node ./esbuild.config.mjs",
    "start": "bun run dist/index.mjs",
    "render:build": "bun install && bun run build"
  },
  "dependencies": {
    "@towns-protocol/bot": "^0.0.364",
    "@towns-protocol/sdk": "^0.0.364",
    "@hono/node-server": "^1.14.0",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "towns-protocol",
    "bot",
    "starter",
    "template",
    "beginner"
  ],
  "author": "Towns Protocol Community",
  "license": "MIT"
}
